<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorAccent"
    android:layout_marginBottom="@dimen/min_margin"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/ingredient_title_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:padding="@dimen/list_item_padding"
        android:textAppearance="?attr/textAppearanceBody1" />

    <ImageButton
        android:id="@+id/delete_ingredient_button"
        android:layout_width="wrap_content"
        android:paddingStart="@dimen/main_padding"
        android:paddingEnd="@dimen/main_padding"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        android:contentDescription="@string/remove_ingredient"
        app:srcCompat="@drawable/ic_close_cross" />
</LinearLayout>